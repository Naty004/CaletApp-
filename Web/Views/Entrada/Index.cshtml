@model IEnumerable<Domain.Ingreso>

@{
    ViewData["Title"] = "Ingresos";
}

<div class="container mt-4">
    <h1>Ingresos</h1>

    <a asp-action="Create" class="btn btn-success mb-3">Agregar Nuevo Ingreso</a>

    @if (!Model.Any())
    {
        <div class="alert alert-info">No hay ingresos registrados.</div>
    }
    else
    {
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Descripci√≥n</th>
                    <th>Monto</th>
                    <th>Fecha</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ingreso in Model)
                {
                    <tr>
                        <td>@ingreso.Descripcion</td>
                        <td>@ingreso.Monto.ToString("C")</td>
                        <td>@ingreso.Fecha.ToString("dd/MM/yyyy")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
