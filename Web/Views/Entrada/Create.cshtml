@{
    ViewData["Title"] = "Agregar Nuevo Ingreso";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>

    <form asp-action="Create" method="post" class="needs-validation" novalidate>
        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label for="descripcion" class="form-label">Descripci칩n</label>
            <input type="text" class="form-control" id="descripcion" name="descripcion" required />
            <div class="invalid-feedback">
                Por favor ingresa una descripci칩n.
            </div>
        </div>

        <div class="mb-3">
            <label for="monto" class="form-label">Monto</label>
            <input type="number" step="0.01" min="0.01" class="form-control" id="monto" name="monto" required />
            <div class="invalid-feedback">
                Por favor ingresa un monto v치lido mayor que cero.
            </div>
        </div>

        <div class="mb-3">
            <label for="fecha" class="form-label">Fecha</label>
            <input type="date" class="form-control" id="fecha" name="fecha" required />
            <div class="invalid-feedback">
                Por favor selecciona una fecha v치lida.
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
    </form>
</div>

@section Scripts {
    <script>
        // Bootstrap form validation
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}
