@model IEnumerable<Domain.Ingreso>

@{
    ViewData["Title"] = "Ingresos";
}

<h2 class="mb-4">Lista de Ingresos</h2>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Mensaje"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
    </div>
}

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">Agregar Nuevo Ingreso</a>
</div>

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Fecha</th>
                    <th>Monto</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ingreso in Model)
                {
                    <tr>
                        <td>@ingreso.Fecha.ToString("dd/MM/yyyy")</td>
                        <td>@ingreso.Monto.ToString("C")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p class="text-muted">No hay ingresos registrados.</p>
}