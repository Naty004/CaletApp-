@model List<Services.Dtos.CategoriaModels>

<h2>Lista de Categorías</h2>

<a asp-action="Crear" class="btn btn-primary">Agregar Categoría</a>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Porcentaje</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var categoria in Model)
        {
            <tr>
                <td>@categoria.NombreCategoria</td>
                <td>@categoria.DescripcionCategoria</td>
                <td>@categoria.PorcentajeCategoria%</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@categoria.Id" class="btn btn-warning">Editar</a>
                    <a asp-action="Eliminar" asp-route-id="@categoria.Id" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>