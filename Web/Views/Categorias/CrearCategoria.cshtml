@model Services.Dtos.CategoriaModels

<h2>Agregar Categoría</h2>

<form asp-action="Crear" method="post">
    <div class="form-group">
        <label for="nombre">Nombre:</label>
        <input asp-for="NombreCategoria" class="form-control" />
    </div>

    <div class="form-group">
        <label for="descripcion">Descripción:</label>
        <textarea asp-for="DescripcionCategoria" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label for="porcentaje">Porcentaje:</label>
        <input asp-for="PorcentajeCategoria" type="number" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</form>