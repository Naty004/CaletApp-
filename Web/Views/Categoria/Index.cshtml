@model IEnumerable<Web.ViewModels.CategoriaViewModel>


@{
    ViewData["Title"] = "Categorías";
}

<div class="container mt-4">
    <h1 class="mb-4">Categorías</h1>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nueva Categoría
        </a>
    </div>

    <table class="table table-bordered table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Porcentaje Máximo Mensual</th>
                <th>Total Gastado (Mes Actual)</th>
                <th style="width: 150px;">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="5" class="text-center">No hay categorías registradas.</td>
                </tr>
            }
            else
            {
                foreach (var categoria in Model)
                {
                    <tr>
                        <td>@categoria.Nombre</td>
                        <td>@categoria.Descripcion</td>
                        <td>@categoria.PorcentajeMaximoMensual.ToString("0.##") %</td>
                        <td>@categoria.GastoActual.ToString("C")</td>

                        
                        <td>
                            <a asp-action="Edit" asp-route-id="@categoria.Id" class="btn btn-sm btn-warning me-1" title="Editar">
                                <i class="bi bi-pencil-square"></i>
                            </a>

                            <form asp-action="Delete" asp-route-id="@categoria.Id" method="post" class="d-inline" onsubmit="return confirm('¿Seguro que deseas eliminar esta categoría?');">
                                <button type="submit" class="btn btn-sm btn-danger" title="Eliminar">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
