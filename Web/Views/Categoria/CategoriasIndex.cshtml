@model IEnumerable<Domain.Categoria>

@{
    ViewData["Title"] = "Categorías";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <!-- Nav tabs -->
    <ul class="nav nav-tabs mb-3" id="categoriaTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="lista-tab" data-bs-toggle="tab" data-bs-target="#lista" type="button" role="tab" aria-controls="lista" aria-selected="true">Lista</button>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link" href="@Url.Action("Create", "Categoria")">Crear Nueva</a>
        </li>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content" id="categoriaTabsContent">
        <div class="tab-pane fade show active" id="lista" role="tabpanel" aria-labelledby="lista-tab">
            @if (!Model.Any())
            {
                <p>No hay categorías visibles.</p>
            }
            else
            {
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Descripción</th>
                            <th>% Máximo Mensual</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var categoria in Model)
                        {
                            <tr>
                                <td>@categoria.Nombre</td>
                                <td>@categoria.Descripcion</td>
                                <td>@categoria.PorcentajeMaximoMensual.ToString("F2")%</td>
                                <td>
                                    <a class="btn btn-sm btn-info" href="@Url.Action("Details", "Categoria", new { id = categoria.Id })" title="Detalles">Detalles</a>
                                    <a class="btn btn-sm btn-warning" href="@Url.Action("EditPorcentaje", "Categoria", new { id = categoria.Id })" title="Editar porcentaje">Editar %</a>
                                    <a class="btn btn-sm btn-danger" href="@Url.Action("Eliminar", "Categoria", new { id = categoria.Id })" title="Eliminar">Eliminar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
