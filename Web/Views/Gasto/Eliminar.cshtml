@model Web.Models.GastoViewModel

@{
    ViewData["Title"] = "Eliminar Gasto";
}

<h2>Eliminar Gasto</h2>

<div class="alert alert-warning">
    <strong>¿Estás seguro que quieres eliminar este gasto?</strong>
    <p>Esta acción es <strong>irrevocable</strong> y no podrá deshacerse.</p>
</div>

<table class="table table-bordered">
    <tr>
        <th>Categoría</th>
        <td>@Model.NombreCategoria</td>
    </tr>
    <tr>
        <th>Descripción</th>
        <td>@Model.Descripcion</td>
    </tr>
    <tr>
        <th>Monto</th>
        <td>@Model.Monto.ToString("C")</td>
    </tr>
    <tr>
        <th>Fecha</th>
        <td>@Model.Fecha.ToString("dd/MM/yyyy")</td>
    </tr>
</table>

<form asp-action="Eliminar" method="post">
    <input type="hidden" asp-for="GastoId" />
    <button type="submit" class="btn btn-danger">
        <i class="bi bi-trash"></i> Eliminar
    </button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
</form>
