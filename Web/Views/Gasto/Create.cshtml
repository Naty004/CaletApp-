@model Web.Models.GastoCreateViewModel

@{
    ViewData["Title"] = "Agregar Gasto";
}

<h2 class="mb-4">Agregar Gasto</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create" method="post" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="mb-3">
                <label asp-for="Descripcion" class="form-label">Descripción</label>
                <input asp-for="Descripcion" class="form-control" required />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Monto" class="form-label">Monto</label>
                <input asp-for="Monto" type="number" step="0.01" min="0.01" class="form-control" required />
                <span asp-validation-for="Monto" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Fecha" class="form-label">Fecha</label>
                <input asp-for="Fecha" type="date" class="form-control" required />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CategoriaId" class="form-label">Categoría</label>
                <select asp-for="CategoriaId" asp-items="@(new SelectList(Model.Categorias, "Id", "Nombre"))" class="form-select" required>
                    <option value="">Seleccione una categoría</option>
                </select>
                <span asp-validation-for="CategoriaId" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Guardar</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
        </form>
    </div>
</div>
