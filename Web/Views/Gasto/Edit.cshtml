@model Domain.Gasto

@{
    ViewData["Title"] = "Editar Gasto";
    var categorias = ViewBag.Categorias as List<Domain.Categoria>;
}

<div class="container mt-4">
    <h1>Editar Gasto</h1>

    <form asp-action="Edit" method="post" class="needs-validation" novalidate>
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Descripcion" class="form-label"></label>
            <input asp-for="Descripcion" class="form-control" maxlength="200" required />
            <div class="invalid-feedback">
                Por favor ingresa una descripción.
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Monto" class="form-label"></label>
            <input asp-for="Monto" class="form-control" type="number" step="0.01" min="0.01" required />
            <div class="invalid-feedback">
                Por favor ingresa un monto válido mayor a 0.
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Fecha" class="form-label"></label>
            <input asp-for="Fecha" class="form-control" type="date" required />
            <div class="invalid-feedback">
                Por favor selecciona una fecha válida.
            </div>
        </div>

        <div class="mb-3">
            <label for="categoriaId" class="form-label">Categoría</label>
            <select id="categoriaId" name="categoriaId" class="form-select" required>
                <option value="" disabled>Selecciona una categoría</option>
                @if (categorias != null)
                {
                    foreach (var cat in categorias)
                    {
                        if (cat.Id == Model.CategoriaId)
                        {
                            <option value="@cat.Id" selected="selected">@cat.Nombre</option>
                        }
                        else
                        {
                            <option value="@cat.Id">@cat.Nombre</option>
                        }
                    }
                }
            </select>
            <div class="invalid-feedback">
                Por favor selecciona una categoría.
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        (() => {
            'use strict'

            const forms = document.querySelectorAll('.needs-validation')

            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }

                    form.classList.add('was-validated')
                }, false)
            })
        })()
    </script>
}
