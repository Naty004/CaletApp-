@model IEnumerable<Domain.Gasto>

@{
    ViewData["Title"] = "Gastos Registrados";
}

<h2 class="mb-4">Gastos Registrados</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">No se han registrado gastos aún.</div>
}
else
{
    <table class="table table-striped">
        <thead class="table-dark">
            <tr>
                <th>Descripción</th>
                <th>Monto</th>
                <th>Fecha</th>
                <th>Categoría</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var gasto in Model)
            {
                <tr>
                    <td>@gasto.Descripcion</td>
                    <td>@gasto.Monto.ToString("C")</td>
                    <td>@gasto.Fecha.ToShortDateString()</td>
                    <td>@gasto.Categoria?.Nombre</td>
                    <td>
                        <a asp-action="Eliminar" asp-route-id="@gasto.Id" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<a asp-action="Create" class="btn btn-primary">Agregar Gasto</a>

