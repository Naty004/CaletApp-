@model List<Web.Models.ResumenGastoViewModel>

@{
    ViewData["Title"] = "Resumen de Gastos";
}

<h2>Resumen de Gastos por Categoría</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Categoría</th>
            <th>Gasto Actual</th>
            <th>Máximo Permitido</th>
            <th>Porcentaje Usado</th>
            <th>Indicador</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var color = item.ColorSemaforo;
            <tr>
                <td>@item.NombreCategoria</td>
                <td>@item.GastoActual.ToString("C")</td>
                <td>@item.GastoMaximo.ToString("C")</td>
                <td>@item.PorcentajeUsado %</td>
                <td>
                    <div class="progress">
                        <div class="progress-bar" role="progressbar"
                             style="width:@item.PorcentajeUsado%; background-color:@color"
                             aria-valuenow="@item.PorcentajeUsado" aria-valuemin="0" aria-valuemax="100">
                            @item.PorcentajeUsado %
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Registrar nuevo gasto</a>
