<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Caletapp</title>

    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/css/Main.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MvcTemplate.styles.css" asp-append-version="true" />

    <style>
        /* Fondo degradado suave */
        body {
            background: linear-gradient(135deg, #f8fafc, #e0e7ff);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #333;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* Header estilo oscuro con sombra */
        header.header {
            background-color: #2c3e50;
            color: white;
            padding: 1rem 0;
            box-shadow: 0 2px 8px rgb(0 0 0 / 0.15);
            z-index: 1030;
        }

        .sitename {
            font-weight: 700;
            font-size: 1.8rem;
            letter-spacing: 1.2px;
            margin: 0;
            user-select: none;
        }

        nav.navmenu a.btn {
            margin-left: 0.8rem;
            font-weight: 600;
            border-radius: 0.375rem;
            transition: background-color 0.3s ease, color 0.3s ease;
        }
        nav.navmenu a.btn-outline-light:hover {
            background-color: #3498db;
            color: white;
            border-color: #3498db;
        }

        main.main {
            flex-grow: 1;
            padding: 2.5rem 1.5rem;
            max-width: 1200px;
            margin: 0 auto;
            width: 100%;
        }

        /* Scroll top button */
        #scroll-top {
            background-color: #3498db;
            color: white;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            position: fixed;
            bottom: 30px;
            right: 30px;
            cursor: pointer;
            display: none;
            z-index: 1100;
            box-shadow: 0 4px 8px rgb(0 0 0 / 0.2);
            transition: background-color 0.3s ease;
        }

        #scroll-top:hover {
            background-color: #217dbb;
        }

        /* Footer opcional */
        footer {
            background-color: #2c3e50;
            color: white;
            text-align: center;
            padding: 1rem 0;
            font-size: 0.9rem;
            user-select: none;
            margin-top: auto;
        }
    </style>
</head>
<body>
    <header id="header" class="header d-flex align-items-center sticky-top">
        <div class="container d-flex align-items-center justify-content-between">
            <a href="~/" class="logo d-flex align-items-center text-white text-decoration-none">
                <h1 class="sitename m-0">Caletapp</h1>
            </a>

            <nav id="navmenu" class="navmenu d-flex align-items-center">
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-light">Menú</a>

                <form method="post" action="../Login/Logout" style="display:inline;">
                    <button type="submit" class="btn btn-outline-light ms-3">Cerrar Sesión</button>
                </form>

                <i class="mobile-nav-toggle d-xl-none bi bi-list ms-3"></i>
            </nav>
        </div>
    </header>

    <main class="main">
        @RenderBody()
    </main>

    <footer>
        &copy; @DateTime.Now.Year Caletapp - Todos los derechos reservados.
    </footer>

    <!-- Scroll Top -->
    <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center">
        <i class="bi bi-arrow-up-short fs-3"></i>
    </a>

    <!-- Preloader -->
    <div id="preloader"></div>

    <!-- Bootstrap JS bundle -->
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Optional Vendor JS -->
    <script src="~/lib/php-email-form/validate.js"></script>
    <script src="~/lib/aos/aos.js"></script>
    <script src="~/lib/glightbox/js/glightbox.min.js"></script>
    <script src="~/lib/imagesloaded/imagesloaded.pkgd.min.js"></script>
    <script src="~/lib/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/lib/swiper/swiper-bundle.min.js"></script>

    <!-- Main JS -->
    <script src="~/js/main.js"></script>

    <script>
        // Mostrar botón scroll top solo al hacer scroll
        const scrollTopBtn = document.getElementById('scroll-top');
        window.addEventListener('scroll', () => {
            if (window.scrollY > 300) {
                scrollTopBtn.style.display = 'flex';
            } else {
                scrollTopBtn.style.display = 'none';
            }
        });
        scrollTopBtn.addEventListener('click', (e) => {
            e.preventDefault();
            window.scrollTo({ top: 0, behavior: 'smooth' });
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
