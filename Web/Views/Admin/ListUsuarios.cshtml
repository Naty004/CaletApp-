@model IEnumerable<Infrastructure.Identity.ApplicationUser>
@{
    ViewData["Title"] = "Lista de Usuarios";
}

<h2>Lista de Usuarios</h2>

<a asp-action="AddUsuario" class="btn btn-primary mb-3">Crear nuevo usuario</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Email</th>
            <th>Nombre de usuario</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in Model)
        {
            <tr>
                <td>@usuario.Email</td>
                <td>@usuario.UserName</td>
                <td>
                    <form asp-action="DeleteUsuario" asp-route-id="@usuario.Id" method="post" onsubmit="return confirm('¿Estás seguro de eliminar este usuario?');">
                        <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
