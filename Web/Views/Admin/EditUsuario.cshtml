@model Services.Dtos.RegistroModel

@{
    ViewData["Title"] = "Editar Usuario";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Editar Usuario</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Admin.css" />
</head>
<body>
    <div class="registro-container">
        <h2>Editar Usuario</h2>
        <form asp-action="EditUsuario" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="NombreUsuario"></label>
                    <input asp-for="NombreUsuario" class="form-control" />
                    <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="CorreoElectronico"></label>
                    <input asp-for="CorreoElectronico" class="form-control" />
                    <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Contrasena"></label>
                    <input asp-for="Contrasena" type="password" class="form-control" />
                    <span asp-validation-for="Contrasena" class="text-danger"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-primary mt-3">Guardar Cambios</button>
            <a href="@Url.Action("ListUsuarios", "Admin")" class="btn btn-secondary mt-3">Cancelar</a>
        </form>
    </div>
</body>
</html>
