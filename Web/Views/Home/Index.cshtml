@model dynamic

@{
    ViewData["Title"] = "Inicio - Resumen Financiero";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card text-white bg-success mb-3">
                <div class="card-header">Ingreso Disponible</div>
                <div class="card-body">
                    <h3 class="card-title">$@ViewBag.IngresoDisponible.ToString("N2")</h3>
                    <p class="card-text">De un total de $@ViewBag.IngresoTotal.ToString("N2")</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-white bg-danger mb-3">
                <div class="card-header">Gasto Total Mensual</div>
                <div class="card-body">
                    <h3 class="card-title">$@ViewBag.GastoTotal.ToString("N2")</h3>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-white bg-info mb-3">
                <div class="card-header">Porcentaje Gastado</div>
                <div class="card-body">
                    <h3 class="card-title">@ViewBag.PorcentajeGastado %</h3>
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" style="width: @ViewBag.PorcentajeGastado%" aria-valuenow="@ViewBag.PorcentajeGastado" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <h3 class="mb-3">Categorías y Gastos</h3>

    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>Nombre</th>
                <th>Gasto Actual</th>
                <th>Tope Máximo</th>
                <th>% Gastado</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Categorias.Count == 0)
            {
                <tr>
                    <td colspan="4" class="text-center">No hay categorías registradas.</td>
                </tr>
            }
            else
            {
                foreach (var cat in Model.Categorias)
                {
                    var color = cat.Porcentaje < 70 ? "bg-success" :
                                cat.Porcentaje < 100 ? "bg-warning" : "bg-danger";

                    <tr>
                        <td>@cat.Nombre</td>
                        <td>$@cat.GastoActual.ToString("N2")</td>
                        <td>$@cat.Tope.ToString("N2")</td>
                        <td>
                            @cat.Porcentaje % 
                            <div class="progress" style="height: 20px;">
                                <div class="progress-bar @color" role="progressbar" style="width: @cat.Porcentaje%" aria-valuenow="@cat.Porcentaje" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <div class="mt-4">
        <a href="@Url.Action("Index", "Categoria")" class="btn btn-primary me-2">Gestionar Categorías</a>
        <a href="@Url.Action("Index", "Gasto")" class="btn btn-warning me-2">Ver Gastos</a>
        <a href="@Url.Action("Index", "Ingreso")" class="btn btn-success">Ver Ingresos</a>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
